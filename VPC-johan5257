AWSTemplateFormatVersion: '2010-09-09'
Description: CloudFormation template to create a VPC spanning 3 AZs in us-west-2 region

Parameters:
  VpcCidr:
    Type: String
    Default: 10.0.0.0/16
    Description: CIDR block for the VPC

  PublicSubnet1Cidr:
    Type: String
    Default: 10.0.1.0/24
  PublicSubnet2Cidr:
    Type: String
    Default: 10.0.2.0/24
  PublicSubnet3Cidr:
    Type: String
    Default: 10.0.3.0/24

  AZ1:
    Type: AWS::EC2::AvailabilityZone::Name
    Default: us-west-2a
  AZ2:
    Type: AWS::EC2::AvailabilityZone::Name
    Default: us-west-2b
  AZ3:
    Type: AWS::EC2::AvailabilityZone::Name
    Default: us-west-2c

Resources:
  MyVPC:
    Type: AWS::EC2::VPC
    Properties:
      CidrBlock: !Ref VpcCidr
      EnableDnsSupport: true
      EnableDnsHostnames: true
      Tags:
        - Key: Name
          Value: VPC-johan5257

  PublicSubnet1:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref MyVPC
      CidrBlock: !Ref PublicSubnet1Cidr
      AvailabilityZone: !Ref AZ1
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: PublicSubnet1

  PublicSubnet2:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref MyVPC
      CidrBlock: !Ref PublicSubnet2Cidr
      AvailabilityZone: !Ref AZ2
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: PublicSubnet2

  PublicSubnet3:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref MyVPC
      CidrBlock: !Ref PublicSubnet3Cidr
      AvailabilityZone: !Ref AZ3
      MapPublicIpOnLaunch: true
      Tags:
        - Key: Name
          Value: PublicSubnet3

Outputs:
  VPCId:
    Description: VPC ID
    Value: !Ref MyVPC

  Subnet1:
    Description: Public Subnet 1 ID
    Value: !Ref PublicSubnet1

  Subnet2:
    Description: Public Subnet 2 ID
    Value: !Ref PublicSubnet2

  Subnet3:
    Description: Public Subnet 3 ID
    Value: !Ref PublicSubnet3
